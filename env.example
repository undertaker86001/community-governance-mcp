# Higress社区治理Agent环境变量配置

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here

# GitHub配置
GITHUB_TOKEN=your_github_token_here

# DeepWiki配置
DEEPWIKI_API_KEY=your_deepwiki_api_key_here

# 服务配置
AGENT_PORT=8080
AGENT_DEBUG=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 数据库配置（可选）
DATABASE_URL=postgres://username:password@localhost:5432/higress_agent

# Redis配置（可选）
REDIS_URL=redis://localhost:6379

# 监控配置
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s

# 知识库配置
KNOWLEDGE_STORAGE_PATH=./data/knowledge
KNOWLEDGE_MAX_SIZE=1GB

# 缓存配置
CACHE_DURATION=1h
MAX_CONCURRENT_REQUESTS=10

# 安全配置
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m 